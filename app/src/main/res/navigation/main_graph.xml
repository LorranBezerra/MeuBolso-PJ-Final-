<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.meuapp.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_autenticacao"
            app:destination="@id/autenticacao"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.meuapp.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_adicionarFragment"
            app:destination="@id/adicionarFragment" />
        <action
            android:id="@+id/action_homeFragment_to_configuracoesFragment"
            app:destination="@id/configuracoesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_despesasFragment"
            app:destination="@id/despesasFragment" />
        <action
            android:id="@+id/action_homeFragment_to_metasFragment"
            app:destination="@id/metasFragment" />
        <action
            android:id="@+id/action_homeFragment_to_receitasFragment"
            app:destination="@id/receitasFragment" />
    </fragment>
    <fragment
        android:id="@+id/adicionarFragment"
        android:name="com.example.meuapp.ui.Adiciona.AdicionarFragment"
        android:label="fragment_adicionar"
        tools:layout="@layout/fragment_adicionar" >
        <action
            android:id="@+id/action_adicionarFragment_to_configuracoesFragment"
            app:destination="@id/configuracoesFragment" />
        <action
            android:id="@+id/action_adicionarFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/configuracoesFragment"
        android:name="com.example.meuapp.ui.Config.ConfiguracoesFragment"
        android:label="fragment_configuracoes"
        tools:layout="@layout/fragment_configuracoes" >
        <action
            android:id="@+id/action_configuracoesFragment_to_adicionarFragment"
            app:destination="@id/adicionarFragment" />
        <action
            android:id="@+id/action_configuracoesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_configuracoesFragment_to_excluirContaFragment"
            app:destination="@id/excluirContaFragment" />
        <action
            android:id="@+id/action_configuracoesFragment_to_informacoesFragment"
            app:destination="@id/informacoesFragment" />
        <action
            android:id="@+id/action_configuracoesFragment_to_autenticacao"
            app:destination="@id/autenticacao"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <navigation android:id="@+id/autenticacao"
        app:startDestination="@id/loginFragment">
        <fragment
            android:id="@+id/esqueceu_SenhaFragment"
            android:name="com.example.meuapp.ui.auth.Esqueceu_SenhaFragment"
            android:label="fragment_esqueceu__senha"
            tools:layout="@layout/fragment_esqueceu__senha" >
            <action
                android:id="@+id/action_esqueceu_SenhaFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        </fragment>
        <fragment
            android:id="@+id/verificarEmailFragment"
            android:name="com.example.meuapp.ui.auth.VerificarEmailFragment"
            android:label="VerificarEmailFragment" >
            <action
                android:id="@+id/action_verificarEmailFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        </fragment>
        <fragment
            android:id="@+id/criarContaFragment"
            android:name="com.example.meuapp.ui.auth.CriarContaFragment"
            android:label="fragment_criar_conta"
            tools:layout="@layout/fragment_criar_conta" >
            <action
                android:id="@+id/action_criarContaFragment_to_verificarEmailFragment"
                app:destination="@id/verificarEmailFragment" />
            <action
                android:id="@+id/action_criarContaFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        </fragment>
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.meuapp.ui.auth.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login" >
            <action
                android:id="@+id/action_loginFragment_to_criarContaFragment"
                app:destination="@id/criarContaFragment" />
            <action
                android:id="@+id/action_loginFragment_to_esqueceu_SenhaFragment"
                app:destination="@id/esqueceu_SenhaFragment" />
        </fragment>
        <action
            android:id="@+id/action_global_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </navigation>
    <fragment
        android:id="@+id/excluirContaFragment"
        android:name="com.example.meuapp.ui.Config.ExcluirContaFragment"
        android:label="ExcluirContaFragment" />
    <fragment
        android:id="@+id/informacoesFragment"
        android:name="com.example.meuapp.ui.Config.informacoesFragment"
        android:label="informacoesFragment" />
    <fragment
        android:id="@+id/despesasFragment"
        android:name="com.example.meuapp.ui.BtnMenu.DespesasFragment"
        android:label="fragment_despesas"
        tools:layout="@layout/fragment_despesas" />
    <fragment
        android:id="@+id/metasFragment"
        android:name="com.example.meuapp.ui.BtnMenu.MetasFragment"
        android:label="fragment_metas"
        tools:layout="@layout/fragment_metas" />
    <fragment
        android:id="@+id/receitasFragment"
        android:name="com.example.meuapp.ui.BtnMenu.ReceitasFragment"
        android:label="fragment_receitas"
        tools:layout="@layout/fragment_receitas" />
</navigation>