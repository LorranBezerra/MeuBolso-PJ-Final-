<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.auth.LoginFragment"
    android:background="@color/primaria">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="351dp"
            android:layout_height="347dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:src="@mipmap/logo_foreground" />


        <EditText
                    android:id="@+id/usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_edit"
                    android:textColor="@color/white"
                    android:hint="Usuario"
                    android:padding="10dp" />

        <EditText
            android:id="@+id/senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/bg_edit"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_RecuperarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Esqueci a miinha senha"
            android:textColor="@color/white" />

        <Button
            android:drawableStart="#4D4D4D"
            android:drawableEnd="@color/primaria"
                    android:id="@+id/buttonlogin"
            android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Login" />

        <TextView
            android:id="@+id/txt_Cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Não tem conta? Faça logo a sua !"
            android:textColor="@color/white" />







</LinearLayout>
</ScrollView>