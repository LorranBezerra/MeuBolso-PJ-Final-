<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.VerificacaoEmailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Verificação de E-mail"/>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="391dp"
            android:layout_height="263dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_marginTop="110dp"
            app:cardBackgroundColor="#C8C8C8"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="406dp"
                android:layout_margin="10dp"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Digite o código" />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txtcodigo"
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="100dp"
                    android:background="@drawable/bg_edit"
                    android:hint="Codigo"
                    android:padding="10dp" />

                <Button
                   android:id="@+id/btnReenviar"
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_margin="10dp"
                     android:text="Reenviar"
                 tools:layout_editor_absoluteX="260dp"
                 tools:layout_editor_absoluteY="-4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="Enviaremos um código para verificar seu email"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/buttonVerificaremail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Validar email" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Alterar seu Endereço de email"
            android:textColor="@color/black" />

    </LinearLayout>

</ScrollView>